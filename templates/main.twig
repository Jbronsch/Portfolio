	<div class="container contact" id="contact">
		<div class="sectionHead">
			<h1>Contact Me!</h1>
		</div>
	</div>
	<div class="container content contactSection">
		<div id="contactForm">
			<form class="contactForm" role="form" method="post" action="">
	        	<div class="formSection">
	                <label for="form-name">Name</label><br>
	                <input type="text" class="form" name="name" placeholder="Full Name">
	       		</div>
	            <div class="formSection">
	                <label for="form-email" class="control-label">Email</label><br>
	                <input type="text" class="form" name="email" placeholder="Email">
	            </div>
	             <div class="formSection">
	                <label for="form-subject" class="control-label">Subject</label><br>
	                <input type="text" class="form" name="subject" placeholder="Subject">
	            </div>
	            <div class="formSection">
	                <label for="form-message" class= "control-label">Message</label><br>
	                    <textarea rows="5" cols="35" class="form" name="message" placeholder="Message"></textarea>
	            </div>
	            <div class="formSection">
	                <div>
	                    <input type="submit" value="Submit" class="button-link">
	                </div>
	        	</div>
			</form>
		</div>
	</div>
